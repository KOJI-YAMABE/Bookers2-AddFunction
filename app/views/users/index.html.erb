<div class="row">
	<div class="col-xs-3">
<h2>User info</h2>
<%= render 'users/profile', user: current_user %>

<h2>New book</h2>
<%= render 'books/newform', book: @book %>
</div>
<div class="col-xs-9">
<h2>Users</h2>
<!--users一覧 -->
<table class="table">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
			<td><%= user.name %></td>
			<td><%= "フォロー数：#{user.followings.count}" %>
			</td>
			<td><%= "フォロワー数：#{user.followers.count}" %>
            </td>
            <td>
            	<% if user != current_user %>
                    <div id="follow_form">
                        <% if current_user.following?(user) %>
                            <%= link_to 'フォロー外す', user_follow_relationships_path(user.id), method: :delete %>
                        <% else %>
                            <%= link_to 'フォローする', user_follow_relationships_path(user.id), method: :post %>
                        <% end %>
                    </div>
                <% end %>
            </td>
			<td><%= link_to "Show", user_path(user), class: "user_#{user.id}" %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<!--users一覧 -->
</div>
</div>
