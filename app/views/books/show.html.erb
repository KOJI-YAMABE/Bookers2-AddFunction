
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @book.user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @bookpost %>

	</div>

	    <div class="col-xs-9">
		   <h2>Book detail</h2>

		    <table class="table">
				<tr id="book_<%= @book.id %>">
					<%= render 'books/item', book: @book %>
			<% if @book.user_id == current_user.id %>
                 <td class="edit_book"><%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %>
                 </td>
                 <td class="destroy_book"><%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %>
                 </td>
            <% end %>
				</tr>
			</table>
				   <!-- ここからコメント表示一覧 -->

			        <% @book.book_comments.each do |book_comment| %>
			     <div class="comment">
			            <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %>
			            <%= book_comment.user.name %>
			            <%= book_comment.comment %>
			             <!-- 削除機能-->
			         <% if book_comment.user == current_user %>
			          <%= link_to "Destroy", book_book_comment_path(book_comment.id), method: :delete, class: "btn-sm btn-danger" %>
			         <% end %>
			        <% end %>
			    </div>
			          <!--ここまでコメント表示一覧-->

			        <!-- ここからコメント投稿 -->
			<%= form_for [@book, @book_comment] do |f| %>
			  <%= f.text_area :comment %>
			  <%= f.submit "送信" %>
			<% end %>
			 <!-- ここまで-->
	    </div>
</div>

