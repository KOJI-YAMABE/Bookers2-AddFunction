<div class="row">

	<div class="col-xs-3">
		<h2>User info</h2>
		<%= render 'users/profile', user: @user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>
	</div>

	<div class="col-xs-9">
		<h2>Books</h2>
		<%= render 'books/list', books: @books %>
	</div>

	<% if @user == current_user %>
		<div class="col-xs-12">
			<h2>Your MAP</h2>
			<%= render 'map', user: @user %>
		</div>
	<% end %>
 </div>


